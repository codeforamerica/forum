</head>

<title>GitHub Lite</title>


<body>

  <div class="layout-semibreve" id="main-container">
    <h1>GitHub Lite</h1>

      <div class="layout-minor">
          <nav role="navigation" class="toc" id="toc">
            <ul class="sectlevel1">
              <li>
                <h3><a href="/<%= @repo_string %>">Overview</a></h3>
              </li>
              <li>
                <h3><a href="/<%= @repo_string %>/discussion">Discussion</a></h3>
              </li>
            </ul>
          </nav>
      </div>

    <main id="content" class="layout-major">
        <% if @repo_string %>
        <h2><%= @repo_string %></h2>
        <% end %>

      <%= yield %>
    </main>

  </div> <!-- class="layout-semibreve" -->

</body>

</html>
